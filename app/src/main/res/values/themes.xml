<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Bancojototo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/cardview_dark_background</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Theme.Bancojototo" parent="Base.Theme.Bancojototo" />

    <style name="btnHighlighted" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:backgroundTint">@color/azul_electrico</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">30dp</item>
        <item name="iconTint">@color/white</item>
        <item name="cornerRadius">40dp</item>
    </style>
    <style name="btnSubtle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/azul_oscuro_profundo</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="btnMainMenu" parent="btnHighlighted">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/azul_oscuro_medio</item>
        <item name="iconSize">20dp</item>
        <item name="iconTint">@color/azul_electrico</item>
        <item name="iconGravity">start</item>
        <item name="cornerRadius">40dp</item>
    </style>
    <style name="btnMainMenuLandscape" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/azul_oscuro_medio</item>
        <item name="iconSize">20dp</item>
        <item name="iconTint">@color/azul_electrico</item>
        <item name="iconGravity">textTop</item>
        <item name="cornerRadius">40dp</item>
    </style>


</resources>