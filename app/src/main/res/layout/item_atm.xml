<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="@dimen/common_padding_min"
    android:layout_marginHorizontal="@dimen/common_padding_min"
    android:background="@color/azul_oscuro_medio">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azul_oscuro_medio"
        android:padding="16dp">

        <ImageView
            android:id="@+id/icAtm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_local_atm_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvAtmNum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_atm_num"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/icAtm"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:id="@+id/tvAtmDir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="DireciÃ³n del ATM"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/icAtm"
            app:layout_constraintTop_toBottomOf="@id/tvAtmNum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>